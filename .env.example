# InterView Environment Configuration

# Server
INTERVIEW_HOST=0.0.0.0
INTERVIEW_PORT=8000
INTERVIEW_DEBUG=false
INTERVIEW_INSTANCE_ID=interview-1

# Version
INTERVIEW_VERSION=0.1.0

# Data sources
INTERVIEW_PROJECTION_CACHE_URL=
INTERVIEW_LEDGER_MIRROR_URL=
INTERVIEW_ASYNCGATE_URL=http://localhost:8080
INTERVIEW_DEPOTGATE_URL=http://localhost:8002
INTERVIEW_MEMORYGATE_URL=http://localhost:8001

# Global ledger access (disabled by default)
INTERVIEW_ALLOW_GLOBAL_LEDGER=false
INTERVIEW_GLOBAL_LEDGER_URL=

# Rate limiting for component polls
INTERVIEW_COMPONENT_POLL_RATE_LIMIT_PER_MINUTE=60
INTERVIEW_COMPONENT_POLL_TIMEOUT_MS=500
INTERVIEW_COMPONENT_POLL_CACHE_SECONDS=5

# Cost bounding defaults
INTERVIEW_DEFAULT_LIMIT=100
INTERVIEW_MAX_LIMIT=200
INTERVIEW_DEFAULT_TIME_WINDOW_HOURS=24
INTERVIEW_MAX_TIME_WINDOW_HOURS=168

# Projection cache TTL
INTERVIEW_PROJECTION_CACHE_TTL_SECONDS=60

# Authentication
# API key for REST endpoint authentication (use iv_ prefix by convention)
INTERVIEW_API_KEY=iv_your-secret-api-key-here

# Allow insecure dev mode - ONLY for local development
INTERVIEW_ALLOW_INSECURE_DEV=false
